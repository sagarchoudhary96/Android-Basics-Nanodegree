<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="choudhary96.sagar.p6_tourguide.DetailActivity">

        <ImageView
            android:id="@+id/location_image"
            tools:src="@drawable/al_bake"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/location_name"
            tools:text="Al-Bake"
            android:textSize="@dimen/location_name_size"
            style="@style/DetailMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/location_description"
            tools:text="Description of the Al-Bake"
            style="@style/DetailMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/goto_map"
            android:text="Go to map"
            style="@style/DetailMargins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>